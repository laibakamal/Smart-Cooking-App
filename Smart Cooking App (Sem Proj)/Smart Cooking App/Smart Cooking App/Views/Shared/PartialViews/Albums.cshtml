

<div class="album py-2">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          
          @foreach (Recipe recipe in @Model) 
          {
        <div class="col">
          <div class="card shadow-sm" style="border: 3px solid orange; border-radius: 10px; width: 25rem; height: 28rem;">
             <img src="~/Images/Uploads/1.png"/>
            <div class="card-body">
                <h5 class="card-title">@recipe.Name</h5>
              <p class="card-text">@recipe.ThumbnailText</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                 <button type="button" class="btn btn-warning me-2"><a href="/Userr/RecipeDetail" method="get" style="text-decoration:none; color:black;">View</a></button>
                </div>
                <small class="text-muted">3 mins</small>
              </div>
            </div>
          </div>
        </div>

        }
      </div>
    </div>
  </div>



